/* pages/searchresult/searchresult.wxss */
.container{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.custom-bar{
    background-color:#11D183 ;
    display: flex;
    flex-direction: row;
}
.return {
    padding: 0 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  .returnIcon{
    height: 45rpx;
    width: 45rpx;
    margin-top:10px;
  }
  .text-content{
    display: flex;
    flex-direction: row;
}
.gdname{
    margin-right: 20px;
    width: 190px;
    justify-content: space-around;
    border-radius: 20px;
    background-color: #ECC70D;
}
.report{
    font-size: 12px;
    font-weight: 500;
    height: 25px;
    line-height: 14px;
    padding: 6px;
    background-color: #BD3124;
    color: #FFFFFF;
}
.swiper{
    margin-top: 20px;
    width: 100%;
    height: 255px;
    margin-left: 10px;
}
.deserve_or_not{
    margin-top: 10px;
    display: flex;
    flex-direction: row;
}
.deserve{
    width: 100px;
    border-style: double;
    border-width: 1px;
    justify-items: center;
    align-items: center;
    padding: 4px;
}
.deserveIcon{
    margin-top: 2px;
    width: 17px;
    height: 17px;
}
.htryprice{
    padding-top: 3px;
    height: 31px;
    background-color: #A4ADB3;
    color: #FFFFFF;
}
.divLine{
    background: #E0E3DA;
    width: 100%;
    height: 5rpx;
    margin-top: 10px; 
    margin-bottom: 5px;  
}
.comment-area{
    margin-top: 5px;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.comment-wrapper{
    display: flex;
    flex-direction: row;
}
.input-wrapper{
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0px;
}
.myinput{
    width: 280px;
    height: 40px;
    border-style: double;
    border-width: 1px;
}